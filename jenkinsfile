pipeline {
agent any
stages{
stage('clone repo'){
steps {
cleanWs()
bat "git clone https://github.com/MedHammedi/JenkPipeline"
}}
stage('Build and Test'){
steps{ 
bat "mvn install -f JenkPipeline"
}}
stage('MailTest'){
steps {
emailext body: ' Build Test mail', recipientProviders: [buildUser()], 
 subject: 'Build Notification', to: 'hammedim7@gmail.com'
}}
stage('Deploy'){
steps {
bat "mvn package -f JenkPipeline"
bat "mvn deploy -f JenkPipeline"
bat "mvn sonar:sonar -f JenkPipeline"
} }

}}
